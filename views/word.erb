<h3 class="word"><%= @word.text %></h3>

<% if @word.definitions.any? %>
<ol>
  <% @word.definitions.each do |definition| %>
  <li><a class="link" href="/words/<%= @word.id %>/definitions/<%= definition.id %>"><%= definition.text %></a></li>
  <% end %>
</ol>
<% else %>
<p>You haven't defined <span class="word"><%= @word.text %></span> yet.</p>
<% end %>

<br>

<div class="form-group box">
  <form action="/words/<%= @word.id %>/definitions" method="post">
    <div class="form-group">
      <label for="definition_text">Add a definition:</label>
      <textarea class="form-control" name="definition_text" type="text" rows="2"></textarea>
    </div>
    <button class="btn btn-dark" type="submit">Add</button>
  </form>
</div>

<br>

<div class="form-group">
  <form action="/words/<%= @word.id %>" method="post">
    <div class="form-group">
      <input name="_method" type="hidden" value="delete">
    </div>
    <a class="btn btn-dark" href="/words/<%= @word.id %>/edit" role="button">Edit</a>
    <button class="btn btn-outline-dark" type="submit">Delete</button>
  </form>
</div>

