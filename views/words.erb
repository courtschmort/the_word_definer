<div class="row">
  <div class="col-md-6">
    <h3>Your words:</h3>
    <% if @words.any? %>
    <ul>
      <% @words.each do |word| %>
      <li><a href="/words/<%= word.id %>"><%= word.word %></a></li>
      <% end %>
    </ul>
    <p><a href="/words/add">Add another word</a> or click on an existing word to learn more!</p>
    <% else %>
    <p>You don't have any words yet. <a href="/words/add">Add a word</a> to get started!</p>
    <% end %>
  </div>
  <div class="col-md-6">
    <div class="box">
      <form action="/words">
        <div class="form-group">
          <label for="find_by_word">Find a word:</label>
          <input name="find_by_word" class="form-control" type="text">
        </div>
        <button type="submit" class="btn btn-dark">Find</button>
      </form>
    </div>
  </div>
</div>
